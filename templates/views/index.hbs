<html lang="en">

<head>
    {{>headlink}}
</head>

<body>

    {{>navbar}}
    <!-- main headeer -->

    <div class="containter-fluid main_menu">
        <div class="row"></div>
            <div class="col-md-10 col-12 mx-auto">
                <div class="row">
                    <!-- left side div -->
                    <div class="col-md-6 col-12 main_header_left">
                        <p>Welcom to weather app</p>
                        <h1>Get The Latest <span class="text_clr"> weather</span> Info of Your City</h1>
                        <a href="/weather"><button>Check now</button></a>
                    </div>
                    <!-- right side div -->
                    <div class="col-md-6 col-12 main_header_right">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                              <div class="carousel-item active">
                                <img class="w-100" src="img/bg1.png" alt="First slide">
                              </div>
                              <div class="carousel-item">
                                <img class="w-100" src="img/bg2.png" alt="Second slide">
                              </div>
                              <div class="carousel-item">
                                <img class="w-100" src="img/bg3.png" alt="Third slide">
                              </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                              <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                              <span class="carousel-control-next-icon" aria-hidden="true"></span>
                              <span class="sr-only">Next</span>
                            </a>
                          </div>
                </div>
            </div>
        </div>
    </div>

